<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true"
    tools:context="com.taf.shuvayatra.ui.activity.OnBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black">

                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_onboaring"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/onboard_header_height"
                    android:background="@drawable/onboarding_header" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/message_welcome"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_xxlarge" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_xxxxlarge"
                android:layout_marginRight="@dimen/spacing_xxxxlarge"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/text_xxlarge"
                android:text="@string/msg_onboard"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_small" />

            <com.taf.shuvayatra.ui.views.SwipeDisabledPager
                android:id="@+id/viewpager_questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/spacing_xxxlarge"
                android:paddingLeft="@dimen/spacing_xxxlarge"
                android:paddingRight="@dimen/spacing_xxxlarge"
                android:paddingTop="@dimen/spacing_xxxxxlarge" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_top_round_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/spacing_standard"
        android:paddingLeft="@dimen/spacing_large"
        android:paddingRight="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_standard"
        app:layout_anchor="@id/header"
        app:layout_anchorGravity="bottom|center">

        <ImageView
            android:layout_width="@dimen/spacing_xxxxxlarge"
            android:layout_height="@dimen/spacing_xxxxxlarge"
            android:src="@mipmap/ic_app_launcher" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>