<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemChannelListSelectedDataBinding">

        <variable
            name="channel"
            type="com.taf.model.Channel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_45"
        android:layout_marginLeft="@dimen/spacing_xxsmall"
        android:layout_marginRight="@dimen/spacing_xxsmall"
        app:cardCornerRadius="@dimen/channel_list_item_radius"
        >
        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/featuredImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/channel_list_selected_item_image_height"
                android:scaleType="fitXY"
                app:placeholderImage="@drawable/default_gradient"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/channel_list_selected_details_height"
                android:layout_marginTop="@dimen/channel_list_selected_item_image_height"
                android:padding="@dimen/spacing_xsmall"
                android:layout_marginLeft="@dimen/spacing_xsmall"
                android:layout_marginRight="@dimen/spacing_xxxxxxlarge">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_alpha_87"
                    android:text="@{channel.title}"
                    android:textSize="@dimen/text_big"
                    tools:text="Title"/>
                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_alpha_54"
                    android:layout_below="@+id/title"
                    android:text="@{channel.description}"
                    android:textSize="@dimen/text_default"
                    tools:text="Secondary line text Lorem ipsum dolor sit amet, consectetur."/>
            </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/play"
                android:layout_width="@dimen/channel_list_fab_height_weight"
                android:layout_height="@dimen/channel_list_fab_height_weight"
                android:layout_marginRight="@dimen/channel_list_fab_margin_28"
                android:theme="@style/AppTheme.ChannelFab"
                app:srcCompat="@drawable/ic_play_arrow"
                app:layout_anchor="@id/featuredImage"
                app:layout_anchorGravity="bottom|end"/>
        </android.support.design.widget.CoordinatorLayout>

    </android.support.v7.widget.CardView>

</layout>