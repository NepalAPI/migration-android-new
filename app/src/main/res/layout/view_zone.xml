<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xxsmall"
                android:background="@color/grey_white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_xsmall"
                android:paddingLeft="@dimen/spacing_xlarge"
                android:paddingTop="@dimen/spacing_xsmall">

    <ImageView
        android:id="@+id/drop_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_standard"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/grey_white"
        tools:src="@drawable/ic_arrow_drop_down"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/filterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/spacing_xxxsmall"
        android:layout_toLeftOf="@id/drop_arrow"
        android:textColor="@color/text_main"
        android:textSize="@dimen/text_default"
        android:background="@color/grey_white"
        tools:text="What is passport for?"/>
</RelativeLayout>