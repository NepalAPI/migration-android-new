<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.deprecated.activity.PlacesDetailActivity">

    <data class="PlaceDetailDataBinding">

        <import type="android.view.View" />

        <variable
            name="similarStories"
            type="java.util.List&lt;com.taf.model.Post>" />

        <variable
            name="place"
            type="com.taf.model.Post" />

        <variable
            name="listener"
            type="com.taf.shuvayatra.ui.interfaces.ListItemClickListener" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/audio_toolbar_image_height"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:statusBarScrim="?attr/colorPrimaryDark"
                app:titleEnabled="false">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/cover_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:imageUrl="@{place.featuredImage}"
                        app:layout_collapseMode="parallax"
                        app:placeholderImage="@drawable/default_gradient"
                        fresco:actualImageScaleType="focusCrop"
                        fresco:fadeDuration="300"
                        fresco:failureImageScaleType="centerInside"
                        fresco:overlayImage="@drawable/transparent_gradient" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:background="@drawable/transparent_gradient_from_bottom"
                        android:padding="@dimen/spacing_standard"
                        android:text='@{(place.photoCredit == null || place.photoCredit.isEmpty()) ? "" : ("Photo Credit: " + place.photoCredit)}'
                        android:textSize="@dimen/text_big"
                        android:visibility="@{(place.photoCredit == null &amp;&amp; place.photoCredit.isEmpty()) ? View.GONE: View.VISIBLE}"
                        tools:text="Photo Credit: Person A" />

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="top"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />
            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_mini_player" />

        <include
            layout="@layout/content_places_detail"
            app:listener="@{listener}"
            app:place="@{place}"
            app:similarStories="@{similarStories}" />

    </android.support.design.widget.CoordinatorLayout>
</layout>