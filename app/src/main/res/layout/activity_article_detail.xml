<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ArticleDetailDataBinding">

        <import type="android.view.View" />

        <variable
            name="article"
            type="com.taf.model.Post" />

        <variable
            name="listener"
            type="com.taf.shuvayatra.ui.interfaces.ListItemClickListener" />

        <variable
            name="similarStories"
            type="java.util.List&lt;com.taf.model.Post&gt;" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.yipl.nrna.umesh.ArticleDetailActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_image_height"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:titleEnabled="false">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        app:actualImageScaleType="centerCrop"
                        app:imageUrl="@{article.featuredImage}"
                        app:layout_collapseMode="parallax"
                        app:overlayImage="@drawable/transparent_gradient"
                        app:placeholderImage="@drawable/default_gradient"
                        app:progressBarAutoRotateInterval="1000"
                        app:progressBarImage="@drawable/ic_refresh"
                        app:progressBarImageScaleType="centerInside"
                        tools:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/text_margin"
                        android:background="@drawable/transparent_gradient_from_bottom"
                        android:padding="@dimen/spacing_standard"
                        android:text='@{(article.photoCredit == null || article.photoCredit.isEmpty()) ? "" : ("Photo Credit: " + article.photoCredit)}'
                        android:textSize="@dimen/text_big"
                        android:visibility="@{(article.photoCredit == null &amp;&amp; article.photoCredit.isEmpty()) ? View.GONE: View.VISIBLE}"
                        tools:text="Photo Credit: Person A" />

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="top"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <include
            layout="@layout/content_article_detail"
            app:article="@{article}"
            app:listener="@{listener}"
            app:similarStories="@{similarStories}" />

        <include layout="@layout/content_mini_player" />

    </android.support.design.widget.CoordinatorLayout>
</layout>
