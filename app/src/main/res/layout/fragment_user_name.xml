<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="@dimen/spacing_xxxxlarge"
        android:layout_height="@dimen/spacing_xxxxlarge"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_bg"
        app:srcCompat="@drawable/ic_right"
        android:text="@string/next" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_toLeftOf="@id/button_next"
        android:layout_toRightOf="@id/button_back"
        android:paddingRight="@dimen/spacing_xsmall"
        android:paddingLeft="@dimen/spacing_xsmall"
        android:layout_marginLeft="@dimen/spacing_xxxxlarge"

        android:fadeScrollbars="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xxxlarge"
            android:gravity="center"
            android:text="@string/question_name"
            android:textColor="@color/grey_87"
            android:textSize="@dimen/text_big" />

        <EditText
            android:id="@+id/edittext_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapWords" />

    </LinearLayout>
    </ScrollView>

</RelativeLayout>