<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data class="AudioVideoDataBinding">
        <variable
            name="content"
            type="com.taf.model.Post"/>
    </data>

<android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginLeft="@dimen/spacing_xsmall"
    android:layout_marginRight="@dimen/spacing_xsmall"
    android:layout_marginBottom="@dimen/spacing_small">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/thumbnail_width"
        android:layout_height="@dimen/thumbnail_height"
        android:background="#eeeeee"
        app:srcCompat="@mipmap/ic_launcher"
        tools:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="@dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="03:00"
            tools:text="03:00"
            android:paddingLeft="@dimen/spacing_xxsmall"
            android:paddingBottom="@dimen/spacing_xxsmall"
            android:paddingTop="@dimen/spacing_xxxsmall"
            android:background="@drawable/transparent_gradient_from_bottom"
            android:layout_alignBottom="@id/thumbnail"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginLeft="-25dp"
        android:layout_centerInParent="true"
        app:fabSize="mini"
        app:backgroundTint="@android:color/white"
        app:elevation="3dp"
        android:src="@{content.dataType == 2?@drawable/ic_video:@drawable/ic_like}"
        tools:src="@drawable/ic_video"
        />
    <RelativeLayout
        android:id="@+id/metadata"
        android:layout_height="@dimen/thumbnail_height"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/type"
        android:layout_marginLeft="@dimen/spacing_small"
        android:paddingTop="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_standard">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{content.title}"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="@dimen/text_default"
            android:layout_marginBottom="@dimen/spacing_xsmall"
            tools:text="How migrants control over world the  ajdshjasd  jasd sdfj wer sdf sjdf wer"/>
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{content.category}"
            android:textSize="@dimen/text_small"
            android:layout_marginBottom="@dimen/spacing_xxsmall"
            tools:text="Work Permit"
            android:layout_below="@id/title"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:textSize="@dimen/text_small"
            android:text="3 days ago - 100 views"
            tools:text="3 days ago - 100 views"/>
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--tools:text="120 views"-->
            <!--android:layout_below="@id/category"-->
            <!--android:layout_toRightOf="@id/time"-->
            <!--android:text="@{content.views}"-->
            <!--/>-->
    </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
    </layout>