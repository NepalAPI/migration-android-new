<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data class="ItemChannelListDataBinding">

		<variable
			name="channel"
			type="com.taf.model.Channel"/>
	</data>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="@dimen/channel_list_item_height"
		android:layout_marginBottom="@dimen/channel_list_marginButton"
		android:layout_marginLeft="@dimen/spacing_xxsmall"
		android:layout_marginRight="@dimen/spacing_xxsmall"
		android:clickable="true"
		android:elevation="@dimen/cardview_elevation_4dp"
		app:cardBackgroundColor="@color/pinkish_grey"
		app:cardCornerRadius="@dimen/channel_list_item_radius">

		<RelativeLayout
			android:id="@+id/main_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/item_channel_background">

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/thumbnail"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:actualImageScaleType="centerCrop"
				app:imageUrl="@{channel.imageUrl}"
				app:overlayImage="@drawable/channel_overlay"
				app:progressBarAutoRotateInterval="1000"
				app:progressBarImage="@drawable/ic_refresh"
				app:progressBarImageScaleType="centerInside"/>

			<TextView
				android:id="@+id/title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:layout_alignParentBottom="true"
				android:padding="@dimen/spacing_xxsmall"
				android:textColor="@android:color/white"
				android:textSize="@dimen/text_xlarge"
				tools:text="@{channel.title}"
				/>
		</RelativeLayout>


	</android.support.v7.widget.CardView>

</layout>