<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ItemChannelListDataBinding">

        <variable
            name="channel"
            type="com.taf.model.Channel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/channel_list_item_height"
        android:layout_marginBottom="@dimen/channel_list_marginButton"
        android:layout_marginLeft="@dimen/spacing_xxsmall"
        android:layout_marginRight="@dimen/spacing_xxsmall"
        app:cardBackgroundColor="@color/pinkish_grey"
        app:cardCornerRadius="@dimen/channel_list_item_radius"
        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            tools:text="@{channel.title}"/>
    </android.support.v7.widget.CardView>

</layout>