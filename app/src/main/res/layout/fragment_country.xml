<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity=""
                android:orientation="vertical">

    <ImageView
        android:id="@+id/button_back"
        android:layout_width="@dimen/spacing_xxxxlarge"
        android:layout_height="@dimen/spacing_xxxxlarge"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_bg"
        app:srcCompat="@drawable/ic_left"/>

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="@dimen/spacing_xxxxlarge"
        android:layout_height="@dimen/spacing_xxxxlarge"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_bg"
        app:srcCompat="@drawable/ic_right"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_toLeftOf="@id/button_next"
        android:layout_toRightOf="@id/button_back"
        android:fadeScrollbars="false"
        android:paddingLeft="@dimen/spacing_xsmall"
        android:paddingRight="@dimen/spacing_xsmall">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xxxlarge"
                android:gravity="center"
                android:text="@string/question_destination"
                android:textColor="@color/grey_87"
                android:textSize="@dimen/text_big"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question"
                android:layout_toLeftOf="@id/button_next"
                android:layout_toRightOf="@id/button_back"
                android:background="@color/list_background"
                app:elevation="4dp">

                <Spinner
                    android:id="@+id/spinner_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/question"
                    android:background="@color/grey_white"
                    android:paddingBottom="@dimen/spacing_xsmall"
                    android:paddingTop="@dimen/spacing_xsmall"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>