<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/button_back"
        android:layout_width="@dimen/spacing_xxxxlarge"
        android:layout_height="@dimen/spacing_xxxxlarge"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_bg"
        app:srcCompat="@drawable/ic_left"/>

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="@dimen/spacing_xxxxlarge"
        android:layout_height="@dimen/spacing_xxxxlarge"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_bg"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_right"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="@dimen/spacing_xsmall"
        android:paddingLeft="@dimen/spacing_xsmall"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_toLeftOf="@id/button_next"
        android:layout_toRightOf="@id/button_back"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/question_work_status"
                android:textColor="@color/grey_87"
                android:textSize="@dimen/text_big"/>

            <RadioGroup
                android:id="@+id/radiogroup_previous_work_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxxlarge"
                android:gravity="left"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_working"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_status_working_abroad"
                    android:textColor="@color/grey_87"
                    android:textSize="@dimen/text_default"/>

                <RadioButton
                    android:id="@+id/rb_back_from_abroad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_status_back_from_abroad"
                    android:textColor="@color/grey_87"/>

                <RadioButton
                    android:id="@+id/rb_planning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_status_planning"
                    android:textColor="@color/grey_87"/>

                <RadioButton
                    android:id="@+id/rb_not_going"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_status_not_going"
                    android:textColor="@color/grey_87"/>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>