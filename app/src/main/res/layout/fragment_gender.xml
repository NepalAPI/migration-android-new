<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/button_back"
        android:layout_width="@dimen/spacing_xxxxlarge"
        android:layout_height="@dimen/spacing_xxxxlarge"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_bg"
        app:srcCompat="@drawable/ic_left"/>

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="@dimen/spacing_xxxxlarge"
        android:layout_height="@dimen/spacing_xxxxlarge"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle_bg"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_right"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:layout_toLeftOf="@id/button_next"
        android:layout_toRightOf="@id/button_back"
        android:paddingRight="@dimen/spacing_xsmall"
        android:paddingLeft="@dimen/spacing_xsmall"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xxxlarge"
                android:gravity="center"
                android:text="@string/question_gender"
                android:textColor="@color/grey_87"
                android:textSize="@dimen/text_big"/>

            <RadioGroup
                android:id="@+id/radiogroup_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/choice_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender_male"/>

                <RadioButton
                    android:id="@+id/choice_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender_female"/>

                <RadioButton
                    android:id="@+id/choice_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender_other"/>
            </RadioGroup>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>