<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="CountryWidgetDataBinding">

        <variable
            name="widgetModel"
            type="com.taf.model.CountryWidgetModel" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/show_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        app:cardElevation="@dimen/cardview_elevation_4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_standard">

            <TextView
                android:id="@+id/textview_country_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{widgetModel.countryName}"
                android:textColor="@color/greyish_brown"
                android:textSize="@dimen/text_large"
                tools:text="Country Name" />

            <TextView
                android:id="@+id/nepali_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="@{widgetModel.nepaliDate}"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/text_xxlarge"
                tools:text="१९ आश्विन २०७३, बुधवार" />

            <TextView
                android:id="@+id/forex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:text="@{widgetModel.forex}"
                android:textColor="@color/warm_grey"
                android:textSize="@dimen/text_large"
                tools:text="Exchange Rate" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxlarge"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/english_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{widgetModel.englishDate}"
                    android:textColor="@color/warm_grey"
                    android:textSize="@dimen/text_large"
                    tools:text="Monday,\n 23 October 2o16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="end|right|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_temperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{widgetModel.temperature}"
                        android:textColor="@color/warm_grey"
                        android:textSize="24sp"
                        tools:text="3C" />
					
					<ImageView
						android:id="@+id/imageview_weather"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="@dimen/spacing_xxxsmall"
						app:resourceId="@{widgetModel.imageResource}"
						tools:src="@drawable/ic_rain"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>