<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="content"
            type="com.taf.model.Post"/>
    </data>

    <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@android:color/white">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{content.title}"
        android:textSize="@dimen/text_large"
        android:paddingBottom="@dimen/large_line_height"
        tools:text="How migrants control over world and this is just another "/>
    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Work Permit - 3 days ago"
        android:layout_marginTop="@dimen/spacing_xsmall"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:text="@{content.category}"
        android:textSize="@dimen/text_small"
        android:layout_below="@id/title"/>
    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignBaseline="@id/category"-->
        <!--android:layout_toRightOf="@id/category"-->
        <!--android:text="@{content.postAge}"-->

        <!--tools:text="3 days ago"/>-->
    <ImageView
        android:id="@+id/like"
        android:layout_height="@dimen/icon_size"
        android:layout_width="@dimen/icon_size"
        android:layout_below="@id/category"
        app:srcCompat="@drawable/ic_like"
        android:layout_marginRight="@dimen/spacing_small"
        tools:src="@drawable/ic_like"/>
    <TextView
        android:id="@+id/like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/like"
        android:layout_below="@id/category"
        android:textSize="@dimen/text_small"
        android:layout_marginRight="@dimen/spacing_xxlarge"
        android:text="@{String.valueOf(content.likes)}"
        tools:text="23 loves"/>
    <ImageView
        android:id="@+id/share"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:srcCompat="@drawable/ic_share"
        tools:src="@drawable/ic_share"
        android:layout_toRightOf="@id/like_count"
        android:layout_below="@id/category"
        android:layout_marginRight="@dimen/spacing_small"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="30 shares"
        android:layout_below="@id/category"
        android:textSize="@dimen/text_small"
        android:text="@{String.valueOf(content.likes)}"
        android:layout_toRightOf="@id/share"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_below="@id/like"
        android:layout_marginTop="@dimen/spacing_xlarge"/>
</RelativeLayout>
    </layout>