<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data
		class="PodcastDataBinding">

		<variable
			name="podcast"
			type="com.taf.model.Podcast"/>
	</data>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/spacing_small"
		android:background="@android:color/white">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<com.facebook.drawee.view.SimpleDraweeView
				android:id="@+id/thumbnail"
				android:layout_width="@dimen/thumbnail_width"
				android:layout_height="@dimen/thumbnail_height"
				app:actualImageScaleType="centerCrop"
				app:imageUrl="@{podcast.title}"
				app:placeholderImage="@drawable/default_gradient"
				app:progressBarAutoRotateInterval="1000"
				app:progressBarImage="@drawable/ic_refresh"
				app:progressBarImageScaleType="centerInside"/>

			<android.support.design.widget.FloatingActionButton
				android:id="@+id/type"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="-25dp"
				android:layout_toRightOf="@+id/thumbnail"
				app:srcCompat="@drawable/ic_audio"
				app:backgroundTint="@android:color/white"
				app:elevation="3dp"
				app:fabSize="mini"/>

			<RelativeLayout
				android:id="@+id/metadata"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/spacing_small"
				android:layout_toRightOf="@id/type"
				android:paddingBottom="@dimen/spacing_small"
				android:paddingRight="@dimen/spacing_standard"
				android:paddingTop="@dimen/spacing_small">

				<TextView
					android:id="@+id/title"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/spacing_xsmall"
					android:ellipsize="end"
					android:lines="2"
					android:text="@{podcast.title}"
					android:textColor="@android:color/black"
					android:textSize="@dimen/text_default"
					tools:text="How migrants control over world the  ajdshjasd  jasd sdfj wer sdf sjdf wer"/>

				<TextView
					android:id="@+id/category"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/title"
					android:layout_marginBottom="@dimen/spacing_xxsmall"
					android:ellipsize="end"
					android:lines="2"
					android:text="@{podcast.description}"
					android:textColor="@color/text_main"
					android:textSize="@dimen/text_small"/>
			</RelativeLayout>
		</RelativeLayout>
	</android.support.v7.widget.CardView>

</layout>