<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="InfoListDataBinding">

        <variable
            name="category"
            type="com.taf.model.Category"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_xxsmall"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/spacing_standard"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingRight="@dimen/spacing_standard"
            android:paddingTop="@dimen/spacing_standard"
            android:text="@{category.title}"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_large"
            tools:text="Info Section 1"/>

    </android.support.v7.widget.CardView>
</layout>