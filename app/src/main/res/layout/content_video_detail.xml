<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="video"
            type="com.taf.model.Post"/>
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cccccc"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.yipl.nrna.umesh.VideoDetailActivity"
    tools:showIn="@layout/activity_video_detail">

    <fragment
        android:id="@+id/youtube_fragment"
        android:name="com.google.android.youtube.player.YouTubePlayerSupportFragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_height"/>


    <include
        layout="@layout/view_content_head"
        app:content="@{video}"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="@{video.description}"
        android:padding="@dimen/spacing_standard"
        tools:text="This is the description of the video."/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_default"
        android:layout_marginLeft="@dimen/spacing_standard"
        android:paddingBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="@string/similar_video"
        tools:text="SIMILAR VIDEOS"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/view_audio_video_list"/>
</LinearLayout>
</layout>