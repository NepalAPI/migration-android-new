<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.taf.shuvayatra.ui.fragment.MiniPlayerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mini_media_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mini_media_player_peek_height"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_standard">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/media_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/play_btn_size"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                tools:src="@drawable/ic_play" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical"
                android:paddingLeft="@dimen/spacing_standard"
                android:paddingRight="@dimen/spacing_standard">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_large"
                    tools:text="My experience on applying for Quwait citizenship" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/audio_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="00:00 | 00:00"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_large" />

                    <TextView
                        android:id="@+id/buffering"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_xsmall"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/message_buffering"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_small"
                        android:visibility="gone" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/play"
                android:layout_width="0dp"
                android:layout_height="@dimen/play_btn_size"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_play" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_standard"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/spacing_xxxsmall"
        app:srcCompat="@drawable/ic_close" />

</FrameLayout>
