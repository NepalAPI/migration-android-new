<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:windowBackground">@color/window_background</item>
		<item name="android:dialogTheme">@style/AppTheme.Dialog</item>
	</style>

	<style name="AppTheme.NoActionBar" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.NavigationView">
		<item name="android:textColorSecondary">@color/nav_text_highlight</item>
	</style>

	<style name="SearchTheme" parent="ThemeOverlay.AppCompat.Dark">
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

	<style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowIsFloating">true</item>

		<item name="colorAccent">@color/colorPrimary</item>
	</style>

	<style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
		<item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
		<item name="tabSelectedTextColor">@android:color/white</item>
		<item name="tabTextColor">@color/white_alpha_70</item>
		<item name="tabIndicatorHeight">0dp</item>
	</style>

	<style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
		<item name="android:textSize">@dimen/text_small</item>
		<item name="textAllCaps">false</item>
		<!--<item name="android:textStyle">bold</item>-->
	</style>

	<style name="AppTheme.NoActionBar.AppBarOverlay"
	       parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

	<style name="ExpandedToolbarTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">0dp</item>
	</style>

	<style name="CollapsedToolbarTextAppearance" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">@dimen/text_xlarge</item>
	</style>

	<style name="AppTheme.AppThemeOnBoardActivity" parent="AppTheme.NoActionBar">
		<item name="colorAccent">@color/teal</item>
		<item name="colorControlNormal">@color/teal</item>
	</style>

	<style name="AppTheme.Block">
		<item name="android:textColor">#de000000</item>
	</style>

	<style name="AppTheme.Block.Link">
		<item name="android:textColor">#239ac7</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:padding">@dimen/spacing_12</item>
	</style>

	<style name="AppTheme.Block.List">
		<item name="android:textSize">@dimen/text_big</item>
		<item name="android:lineSpacingExtra">8sp</item>
	</style>

	<style name="ListSecondaryText" parent="AppTheme.Block.List">
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:lineSpacingExtra">6sp</item>
		<item name="android:textColor">#8b000000</item>
	</style>

	<style name="AppTheme.Block.Slider">
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:lineSpacingExtra">10sp</item>
	</style>

	<style name="SliderSecondaryText" parent="AppTheme.Block.Slider">
		<item name="android:textSize">@dimen/text_default</item>
		<item name="android:lineSpacingExtra">10sp</item>
		<item name="android:textColor">#8a000000</item>
	</style>

	<style name="AppTheme.Block.List.Item">
		<item name="android:paddingRight">@dimen/spacing_standard</item>
		<item name="android:paddingLeft">@dimen/spacing_standard</item>
		<item name="android:paddingTop">@dimen/spacing_12</item>
		<item name="android:paddingBottom">@dimen/spacing_12</item>
	</style>

	<style name="AppTheme.Block.Slider.Item">

	</style>
</resources>
